# Ghostty Configuration
# A modern, GPU-accelerated terminal emulator

# Font configuration
font-family = "JetBrains Mono Nerd Font"
font-size = 14

# Colors
background = "#1a1b26"
foreground = "#a9b1d6"
cursor = "#c0caf5"
selection-background = "#283457"
selection-foreground = "#c0caf5"

# Cursor configuration
cursor-shape = "block"
cursor-blink = true

# Window configuration
window-padding-x = 10
window-padding-y = 10
window-width = 1200
window-height = 800

# Tab bar configuration
tab-bar = true
tab-bar-position = "top"
tab-bar-style = "powerline"

# Shell configuration
shell = ["zsh", "-l"]

# Key bindings
key-bindings = [
    { key = "ctrl+shift+c", action = "copy" },
    { key = "ctrl+shift+v", action = "paste" },
    { key = "ctrl+shift+t", action = "new-tab" },
    { key = "ctrl+shift+w", action = "close-tab" },
    { key = "ctrl+tab", action = "next-tab" },
    { key = "ctrl+shift+tab", action = "prev-tab" },
]

# Performance settings
gpu = true
render-timer = false 